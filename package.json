{
  "name": "devscorer",
  "version": "1.0.0",
  "description": "CLI tool that measures code contribution complexity using AI to test if contributions can be replicated",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "devscorer": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "git",
    "analysis",
    "ai",
    "claude",
    "contribution",
    "scoring",
    "complexity",
    "cli",
    "developer",
    "metrics",
    "code-quality",
    "anthropic"
  ],
  "author": "valdrox",
  "homepage": "https://github.com/valdrox/devscorer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/valdrox/devscorer.git"
  },
  "bugs": {
    "url": "https://github.com/valdrox/devscorer/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "@anthropic-ai/sdk": "^0.30.0",
    "@inquirer/prompts": "^7.8.1",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "fs-extra": "^11.2.0",
    "keytar": "^7.9.0",
    "octokit": "^5.0.3",
    "open": "^10.2.0",
    "simple-git": "^3.25.0",
    "tmp": "^0.2.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
